#!/usr/bin/env python3
"""
XCOFF Analysis Tool

Usage: xcoff <command> [options] [arguments]

Commands:
    snapshot    Capture analysis snapshot of an XCOFF file
    compare     Compare two XCOFF files
    diff        Compare two named snapshots
    info        Quick summary of XCOFF file
    validate    Check if file is valid XCOFF
    list        List analyzers or stored snapshots

Examples:
    xcoff snapshot /usr/bin/ls
    xcoff snapshot --store aix73 /usr/bin/ls
    xcoff compare --against aix73 /usr/bin/ls
    xcoff diff aix72 aix73
    xcoff list --stored
"""

import sys
import os

# Add parent directory to path for module import
script_dir = os.path.dirname(os.path.abspath(__file__))
parent_dir = os.path.dirname(script_dir)
if parent_dir not in sys.path:
    sys.path.insert(0, parent_dir)

from xcoff_tool.cli import main

if __name__ == "__main__":
    sys.exit(main())
